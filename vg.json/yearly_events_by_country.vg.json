{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "All Time Events By Country (2015-2020)",
  "data": {"url": "https://raw.githubusercontent.com/LuckyCharm00/visualisation_critique_week11/main/preprocessed_dataset/top_10_yearly_events.csv"},
  "width":"container",
  "height":"container",
  "encoding": {
    "x": {"field": "year_match", "type": "temporal", "title": "Month Of Year", "timeUnit": "utcyearmonth"},
    "y": {"field": "total_events", "type": "quantitative", "title": "Total Events"},
    "color": {
      "condition": {
        "param": "hover",
        "field":"country",
        "type":"nominal"
      },
      "value": "grey"
    },
    "opacity": {
      "condition": {
        "param": "hover",
        "value": 1
      },
      "value": 0.2
    },
    "tooltip": [{"field":"total_events",
                 "type":"quantitative",
                 "title":"Total Events"},
                {"field":"year_match",
                 "type":"temporal",
                 "title":"Date Of Event"},
                 {"field":"country",
                 "type":"nominal",
                 "title":"Country"}]
  },
  "layer": [{
    "description": "transparent layer to make it easier to trigger selection",
    "params": [{
      "name": "hover",
      "value": [{"country": "Sweden"}],
      "select": {
        "type": "point",
        "fields": ["country"],
        "on": "mouseover"
      }
    }],
    "mark": {"type": "circle", "strokeWidth": 8, "stroke": "transparent"}
  }, {
    "mark": {"type": "line", "tooltip": true}
  }],
  "config": {"view": {"stroke": null}}
}
